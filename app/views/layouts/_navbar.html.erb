<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to 'Funny Movies', root_path, class: 'navbar-brand' %>
        </li>
      </ul>
      <% if user_signed_in? %>
        <div class='me-3 d-flex align-items-md-center'>Welcome <%= current_user.name %></div>
        <div class='me-3'>
          <%= link_to 'Share a movie', new_movie_path, type: :button, class: 'btn btn-dark' %>
        </div>
        <div class='me-2'>
          <%= link_to 'Logout', destroy_user_session_path, type: :button, class: 'btn btn-secondary' %>
        </div>
      <% else %>
        <%= form_with model: User, url: user_session_path, class: 'd-flex' do |f| %>
          <%= f.text_field :username, class: 'form-control me-2', placeholder: 'Username', required: true %>
          <%= f.password_field :password, class: 'form-control me-2', placeholder: 'Password', required: true %>
          <%= f.submit 'Login/Registry' %>
        <% end %>
      <% end %>
    </div>
  </div>
</nav>
