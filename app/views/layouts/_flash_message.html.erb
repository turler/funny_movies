<% flash.each do |key, value| %>
  <% alert_class = case key.to_s
                   when 'notice'
                     'success'
                   when 'alert'
                     'warning'
                   else key
                   end %>
  <div class="alert alert-<%=alert_class%>" role='alert'>
    <%= value %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

